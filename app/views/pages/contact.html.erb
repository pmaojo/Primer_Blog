<div id="wrapper-contact">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1>Cont√°ctanos</h1>
      </div>
      <%= simple_form_for :contact do |f| %>
      <div class="panel-body">
        <p><%= f.text_field :name, class: "form-control", placeholder: "Tu nombre" %></p>
        <p><%= f.text_field :email, class: "form-control", placeholder: "Tu e-mail" %></p>
        <p><%= f.text_area :message, class: "form-control", placeholder: "Mensaje para los desarrolladores de este sitio" %></p>
      </div>
      <div class="panel-footer">
        <div class="row">
          <div class="col-md-4 col-md-offset-8 col-lg-3 col-lg-offset-9">
            <p>
              <%= f.submit "Enviar", class: "btn btn-success btn-lg btn-block" %>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
